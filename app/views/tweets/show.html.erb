 <div class="wrapper">
  <div class="contents">
     <div class="each_card_content">
       <div class="text">
        <%= simple_format(@tweet.text) %>
       </div>
        <ul class="action">
           <% if user_signed_in? && current_user.id == @tweet.user.id %>
           <li><%= link_to "EDIT", "/tweets/#{@tweet.id}/edit", method: :get %></li>
           <li><%= link_to "DESTROY", "/tweets/#{@tweet.id}", method: :delete %></li>
           <% end %>
        </ul>
      </div>
      <div class="comment-write-area">
       <p>コメントする</p>
       <%= form_for([@tweet, @comment]) do |f| %>
       <%= f.text_area :text %></br>
       <%= f.submit "POST", :class=>"btn" %>
       <% end %>
      </div>

      <div class="comment-display">
       <p><コメント一覧></p>
       <% @comments.each do |comment| %>
        <p>
         <strong><%= link_to comment.user.id, "/users/#{comment.user_id}" %></strong>:<%= comment.text %>
        </p>
       <% end %>
      </div>
  </div>
</div>